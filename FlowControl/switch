"switch" seleve the case 
"switch" only ( --byte, short ,char , intvString-- )
----------------------------------------------------------------------------------------------
int month = 10 ;
switch (month) {
	case 1 :
	System.out.println("January");
	break;
	case 2 :
	System.out.println("February");
	break;
	case 3 :
	System.out.println("March");
	break;
	case 4 :
	System.out.println("April");
	break;
	case 5 :
	System.out.println("May");
	break;
	case 5 :
	System.out.println("June");
	break;
	default:
	System.out.println("Strang month!!");
	break;
}
