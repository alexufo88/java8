// switch allows you group several conditionas / cases 

------------------------------------------------------------------------------------------------
int month = 2;
int year = 2008;
int numDays = 0;    //numDAys declared here 

switch (month) {
	case 1 :
	case 3 :
	case 5 :
	case 7 :
	case 8 :
	case 10 :
	case 12 :
		numDay = 31 ;
		break ;
	case 4 :
	case 6 :
	case 9 :
	case 11 :
		numDay = 30;
		break ; 
	case 2 :
		if (((year % 4 == 0 ) && !(year % 100 == 0 )) || (year % 400 == 0))
		numDays = 29 ;

		else
			numDays = 28;
			break;

	default:
		System.out.println(" Strange month!!");
		break
		}
	System.out.println("number of day =" + numDays);

}

